     %h2= t 'courses.title'

     %table#basic_studies
          %tr
               %th= t 'courses.levels.basic'
          
          = render :partial => "courses", :locals => {:courses => @basic_studies}

     %table#intermediate_studies
          %tr
               %th= t 'courses.levels.intermediate'

          = render :partial => "courses", :locals => {:courses => @intermediate_studies}

     %table#advanced_studies
          %tr
               %th= t 'courses.levels.advanced'

          = render :partial => "courses", :locals => {:courses => @advanced_studies}


     %table#other_studies
          %tr
               %th= t 'courses.levels.other'
          = render :partial => "courses", :locals => {:courses => @other_studies}
