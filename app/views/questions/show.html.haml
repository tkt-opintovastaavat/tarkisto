%table
     %tr
          %td

               - form_for @question, :url => '#' do |f|

                    %p
                         = f.label 'name'
                         = text_area_tag 'question_name', (@question.name unless @question.name.nil? or @question.name.empty?), :class => 'question-name'

                    %p
                         = f.label 'description'
                         = text_area_tag 'question_description', (@question.description unless @question.description.nil? or @question.description.empty?), :class => 'question-content'

                    %p
                         = f.label 'points'
                         = f.text_field 'points'

          %td
               %div
                    %p= t('pages.exams.forms.questions.image.title')
                    - form_for :image, :url => image_url, :html => { :multipart => true } do |f|
                         = f.file_field :picture
                         = f.submit t('pages.exams.forms.questions.image.submit')
                    %ul 
                         %li
                              %a(href="#show-picture") P=NP
                              %a(href="#delete-pic") [poista]
               %div
                    %p Lisää koodi
                    %p
                         %a(href="#show-code") automata
                         %a(href="#delete-code") [poista]
