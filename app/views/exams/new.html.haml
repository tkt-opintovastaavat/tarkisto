               %tr
                    %td
                    %td
                         = t('pages.exams.forms.newexam.public_notification')
               %tr
                    %td
                    %td
                         = submit_tag t('pages.exams.forms.continue')

          - unless flash[:errors].nil? or flash[:errors].empty?
               %ul.errors
               - flash[:errors].each do |error|
                    %li #{error}

