!!!
%html

     %head

          %link{ :rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon"}/
          %title
               - if yield :title
                    = "Tenttiarkisto :: #{yield :title}"
               - else
                    Tenttiarkisto

          = stylesheet_link_tag 'screen-exam.css', :media => 'screen, projection'
          = stylesheet_link_tag 'print.css', :media => 'print'
          /[if IE]
               = stylesheet_link_tag 'ie.css', :media => 'screen, projection'

          = javascript_include_tag 'crumbs'

     %body

          #container

               = render :partial => "layouts/header"

               #content

                    #tabs 
                         - tabs_tag do |tab|
                              = tab.all 'Kaikki kokeet', exams_url(:course_id => 1)
                              = tab.generate 'Generoi', generate_exams_url(:course_id => 1)
                              = tab.new 'Lisää koe', new_exam_url(:course_id => 1)


                    #tab-content= (yield :content or yield)

               = render :partial => "layouts/footer"
