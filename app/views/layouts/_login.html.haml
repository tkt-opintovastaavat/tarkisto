- unless logged_in?
     - form_for :session, :url => session_url do |f|
          %table
               %tr
                    %td= f.label :username , t('pages.session.form.username')
                    %td= f.label :password, t('pages.session.form.password')
               %tr
                    %td= f.text_field :username
                    %td= f.password_field :password
                    %td= submit_tag t('pages.session.form.submit')
               - unless flash[:session_error].nil?
                    %tr
                         %td.errors(colspan=3)= flash[:session_error]
               - unless flash[:session_notification].nil?
                    %tr
                         %td.notifications(colspan=3)= flash[:session_notification]
- else 
     %span.title #{t('pages.session.logged_in')}:
     #{current_user.username}
     = link_to t('pages.session.logout'), session_url, :method => :delete
     -# - if moderator?
     -# = button_to "Admin", :action => "admin/admin"
     = link_to t('pages.session.admin'), admin_url
     
